
@{
    ViewBag.Title = "About";
}
@model About

<section class="about_section layout_padding mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="img-box">
                    <img src="~/Content/images/about-img.png" alt="" />
                </div>
            </div>
            <div class="col-md-5">
                <div class="detail-box">
                    <div class="custom_heading-container">
                        <h2>
                            @Model.Title
                        </h2>
                    </div>

                    <p>
                       @Model.Description
                    </p>
                    <div>
                        <a href="">
                            About More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

